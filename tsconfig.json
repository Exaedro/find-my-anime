{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                              
    "rootDir": "./src",                                 
    "moduleResolution": "nodenext",                  
    "outDir": "./dist",                               
    "esModuleInterop": true,                          
    "strict": true,                                      
    "declaration": true,
    "skipLibCheck": true                              
  },
  "include": ["src", "tests"],
  "exclude": ["test", "tests"]
}
